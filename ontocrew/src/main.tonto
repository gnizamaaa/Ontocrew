// --- Premiacao ---

/**
* An organization that grants awards to film professionals and works.
*/
kind Associacao {
    label {
        @pt-br "Associação"
        @en "Association"
    }
    description {
        @pt-br "Uma organização que concede prêmios a profissionais e obras de cinema."
        @en "An organization that grants awards to film professionals and works."
    }
    nome: string
    sigla: string
    pais: string
}

/**
* A category within an award system (e.g., Best Actor, Best Picture).
*/
kind Categoria {
    label {
        @pt-br "Categoria"
        @en "Category"
    }
    description {
        @pt-br "Uma categoria específica dentro de um sistema de premiação."
        @en "A specific category within an award system."
    }
    nome: string
    descricao: string
    [1..*] -- pertenceA -- [1] Associacao
}

/**
* A specific edition of an award ceremony (e.g., Oscars 2026).
*/
kind EdicaoPremio {
    label {
        @pt-br "Edição do Prêmio"
        @en "Award Edition"
    }
    description {
        @pt-br "Uma edição específica de uma cerimônia de premiação."
        @en "A specific edition of an award ceremony."
    }
    ano: number
    data_realizacao: date
    local: string
    [1..*] -- concedidaPor -- [1] Associacao
} // Significando a edição de um prêmio específico, como "Oscar 2026"

/**
* Represents the nomination of a candidate for a specific category in an award edition.
* It is a Relator because it connects the Candidate, the Category, and the Edition.
*/
relator Nomeacao {
    label {
        @pt-br "Nomeação"
        @en "Nomination"
    }
    description {
        @pt-br "A indicação de um candidato a uma categoria específica em uma edição de prêmio."
        @en "The nomination of a candidate for a specific category in an award edition."
    }
    data_anuncio: date
    @mediation
    [1] -- candidato -- [1] Candidato
    @mediation
    [1] -- categoria -- [1] Categoria
    @mediation
    [1] -- edicao -- [1] EdicaoPremio
}

/**
* Represents a nomination that resulted in a win.
* It is a Phase of Nomination, implying that a Nomination can transition into a Victory state.
*/
phase Vitoria specializes Nomeacao {
    label {
        @pt-br "Vitória"
        @en "Victory"
    }
    description {
        @pt-br "Uma nomeação que resultou em vitória."
        @en "A nomination that resulted in a win."
    }
    discurso: string
}
