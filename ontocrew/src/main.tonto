package main

// --- Core Concepts ---

/**
* Represents any entity that can be nominated for an award. This is a mixin because it can be applied to different kinds of entities (People, Works).
*/
mixin Candidato {
    label {
        @pt-br "Candidato"
        @en "Candidate"
    }
    description {
        @pt-br "Qualquer entidade que pode ser nomeada a um prêmio, podendo ser uma pessoa ou uma obra."
        @en "Any entity that can be nominated for an award, which can be a person or a work."
    }
    nome: string
    descricao: string  
}

/**
* Represents a human being. It is a Kind because it supplies the principle of identity for its instances.
*/
kind Pessoa specializes Candidato {
    label {
        @pt-br "Pessoa"
        @en "Person"
    }
    description {
        @pt-br "Um ser humano individual."
        @en "An individual human being."
    }
    data_nascimento: date
    nacionalidade: string
}

/**
* Represents an audiovisual work. It is a Kind because it supplies the principle of identity for the work.
*/
kind Obra specializes Candidato {
    label {
        @pt-br "Obra"
        @en "Work"
    }
    description {
        @pt-br "Uma produção audiovisual completa."
        @en "A complete audiovisual production."
    }
    ano_lancamento: number
    duracao_minutos: number
    genero: string
    orcamento: number
    bilheteria: number
   // A work has at least one department involved
   [1] -- tem_departamento -- [1..*] Departamento
}

/**
* Represents a feature-length film.
*/
subkind Filme specializes Obra {
    label {
        @pt-br "Filme"
        @en "Movie"
    }
    description {
        @pt-br "Um filme de longa-metragem."
        @en "A feature-length film."
    }
}

/**
* Represents a short film.
*/
subkind Curta specializes Obra {
    label {
        @pt-br "Curta-Metragem"
        @en "Short Film"
    }
    description {
        @pt-br "Um filme de curta duração."
        @en "A short duration film."
    }
}

/**
* Represents a functional division within the production of a work.
*/
kind Departamento {
    label {
        @pt-br "Departamento"
        @en "Department"
    }
    description {
        @pt-br "Uma divisão funcional dentro da produção de uma obra."
        @en "A functional division within the production of a work."
    }
    nome: string
    descricao: string
}

/**
* The Art department.
*/
subkind Arte specializes Departamento {
    label {
        @pt-br "Departamento de Arte"
        @en "Art Department"
    }
}

/**
* The Sound department.
*/
subkind Som specializes Departamento {
    label {
        @pt-br "Departamento de Som"
        @en "Sound Department"
    }
}

/**
* The Camera department.
*/
subkind Camera specializes Departamento {
    label {
        @pt-br "Departamento de Câmera"
        @en "Camera Department"
    }
}

/**
* The Post-Production department.
*/
subkind PosProducao specializes Departamento {
    label {
        @pt-br "Departamento de Pós-Produção"
        @en "Post-Production Department"
    }
}

/**
* The Visual Effects department.
*/
subkind VFX specializes PosProducao {
    label {
        @pt-br "Departamento de VFX"
        @en "VFX Department"
    }
}


